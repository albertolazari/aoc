#!/bin/bash -e

print_help() {
    echo 'usage: aoc <command> [args]'
    echo commands:
    echo '  input'
    echo '  lang'
    echo '  run'
}

if [[ -z "$1" ]]; then
    print_help >&2
    exit 1
fi

command="$(dirname "$BASH_SOURCE")/../scripts/$1"

if [[ ! -f "$command" ]]; then
    echo aoc: $1 command not found >&2
    print_help >&2
    exit 1
fi

# Get rid of $1, which is the command to run
shift
"$command" "$@"
